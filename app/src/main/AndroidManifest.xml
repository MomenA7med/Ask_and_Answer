<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="momen.ask_and_answer">
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash"
            android:theme="@style/full">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".subject" />
        <activity android:name=".question" />
        <activity android:name=".list_ques" />
        <activity android:name=".Answer" />
        <activity android:name=".About" />
        <activity android:name=".Egabat" />
        <activity android:name=".Last" />
        <activity android:name=".Reminder" />

        <receiver
            android:name=".Alarm_Receiver"
            android:enabled="true"></receiver>

        <service
            android:name=".Alarm_Service"
            android:enabled="true"
            android:exported="false"></service>

        <activity android:name=".Main"></activity>
    </application>


</manifest>